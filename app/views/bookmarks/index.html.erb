<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Link</th>
      <th>Mark type</th>
      <th>Show PDF</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= image_tag bookmark.preview_image_url(:thumbnail) %>
        <td><%= bookmark.name %></td>
        <td><%= bookmark.link %></td>
        <td><%= bookmark.mark_type.name %></td>
        <td><%= link_to 'Show PDF', bookmark.preview_image_url %></td>

        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookmark', new_bookmark_path %>
